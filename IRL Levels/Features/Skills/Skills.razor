@page "/"
@page "/skills"

@inject NavigationManager Nav

<div class="container">
    <div class="row">
        <div class="col">
            <button class="btn btn-primary" @onclick="@(()=>Nav.NavigateTo(Nav.BaseUri + "settings"))">Settings</button>
        </div>
    </div>
</div>

<br />

<div class="container">

    @foreach (var skill in SkillList)
    {
        <SkillLabel Skill="skill" />
    }
</div>

@code {
    private List<Skill> SkillList = new() {
        new("Agility", "images/agility.svg", "skill-icon agility"),
        new("Attack", "images/attack.svg", "skill-icon attack"),
        new("Ranged", "images/ranged.svg", "skill-icon ranged"),
        new("Strength", "images/strength.svg", "skill-icon strength")
    };
}
